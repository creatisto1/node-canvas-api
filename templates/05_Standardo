const { createCanvas } = require('canvas');

module.exports = async function generateTemplate(
  img,
  overlayText,
  targetWidth,
  targetHeight,
  website
) {
  const canvas = createCanvas(targetWidth, targetHeight);
  const ctx = canvas.getContext('2d');

  // === Hintergrund und Bild ===
  ctx.fillStyle = '#fff';
  ctx.fillRect(0, 0, targetWidth, targetHeight);
  ctx.drawImage(img, 0, 0);

  // === Vignettierung ===
  drawVignette(ctx, targetWidth, targetHeight);

  // === Text & Box-Parameter ===
  const padding = 20;
  const maxTextWidth = targetWidth * 0.8;
  const maxLines = 2;

  // Die ursprüngliche Box-Höhe wird später berechnet, um 20% reduziert
  // Wir müssen die Fontgröße dynamisch anpassen, damit Text + URL in die neue kleinere Box passt

  // URL vorbereiten
  const urlText = website || "www.creatisto.com";
  let urlFontSizeStart = Math.floor(22 * 1.5);
  const maxUrlWidth = maxTextWidth;

  // Dynamische Größenanpassung - wir probieren Fontgrößen runter bis alles passt
  let chosenFontSize = 128;
  let urlFontSize = urlFontSizeStart;
  let lines = [];
  let lineHeight = 0;
  let urlLineHeight = 0;

  // Hilfsfunktion für Text und URL prüfen
  function fitsInBox(textSize, urlSize) {
    ctx.font = `900 ${textSize}px "Averta"`;
    lineHeight = textSize * 1.3;
    lines = wrapText(ctx, overlayText, maxTextWidth, maxLines);
    const totalTextHeight = lines.length * lineHeight;

    ctx.font = `bold ${urlSize}px "Averta"`;
    urlLineHeight = urlSize * 1.3;
    
    // Gesamtboxhöhe (inkl. Padding und Abstand URL)
    const urlPaddingTop = padding * 0.6;
    const boxHeight = totalTextHeight + padding * 2 + urlLineHeight + urlPaddingTop;

    // Box ist 20% kleiner als ursprüngliche Max-Box-Höhe (25% von targetHeight)
    const maxBoxHeight = targetHeight * 0.25 * 0.8;

    return boxHeight <= maxBoxHeight;
  }

  // Versuche, eine passende Kombination aus Overlay- und URL-Fontgröße zu finden
  outer: for (let textSize = 128; textSize >= 16; textSize -= 2) {
    for (let uSize = urlFontSizeStart; uSize >= 12; uSize -= 1) {
      if (fitsInBox(textSize, uSize)) {
        chosenFontSize = textSize;
        urlFontSize = uSize;
        break outer;
      }
    }
  }

  // Falls keine Kombination passt, setze auf Minimum
  if (chosenFontSize === 128 && !fitsInBox(128, urlFontSizeStart)) {
    chosenFontSize = 16;
    urlFontSize = 12;
    fitsInBox(chosenFontSize, urlFontSize);
  }

  // Berechne Box-Größe mit finalen Größen
  const urlPaddingTop = padding * 0.6;
  const rectWidth = maxTextWidth + padding * 2;
  const rectHeight = lines.length * lineHeight + padding * 2 + urlLineHeight + urlPaddingTop;

  // Ursprüngliche vertikale Position der Box (vor Verschiebung)
  const verticalPositionFactor = 0.8;
  let rectY = targetHeight * verticalPositionFactor - rectHeight / 2;

  // 1. Verschiebung um 850px nach oben
  rectY -= 850;

  // X-Position bleibt mittig
  const rectX = (targetWidth - rectWidth) / 2;

  // === Blaue Box zeichnen ===
  const cornerRadius = 36;
  ctx.save();
  ctx.shadowColor = 'rgba(0,0,0,0.08)';
  ctx.shadowBlur = 8;
  roundRect(ctx, rectX, rectY, rectWidth, rectHeight, cornerRadius);
  ctx.fillStyle = 'rgba(173, 216, 230, 0.9)';
  ctx.fill();
  ctx.restore();

  // === Overlaytext zeichnen ===
  ctx.save();
  ctx.fillStyle = 'white';
  ctx.textAlign = 'center';
  ctx.textBaseline = 'top';
  ctx.font = `900 ${chosenFontSize}px "Averta"`;
  lines.forEach((line, index) => {
    const y = rectY + padding + index * lineHeight;
    ctx.fillText(line, targetWidth / 2, y);
  });
  ctx.restore();

  // === URL zeichnen ===
  ctx.save();
  ctx.fillStyle = 'white';
  ctx.font = `bold ${urlFontSize}px "Averta"`;
  ctx.textAlign = 'center';
  ctx.textBaseline = 'top';
  ctx.fillText(
    urlText,
    targetWidth / 2,
    rectY + padding + lines.length * lineHeight + urlPaddingTop
  );
  ctx.restore();

  return canvas;
};

// === Hilfsfunktionen === (keine Änderungen)
function roundRect(ctx, x, y, w, h, r) {
  ctx.beginPath();
  ctx.moveTo(x + r, y);
  ctx.lineTo(x + w - r, y);
  ctx.quadraticCurveTo(x + w, y, x + w, y + r);
  ctx.lineTo(x + w, y + h - r);
  ctx.quadraticCurveTo(x + w, y + h, x + w - r, y + h);
  ctx.lineTo(x + r, y + h);
  ctx.quadraticCurveTo(x, y + h, x, y + h - r);
  ctx.lineTo(x, y + r);
  ctx.quadraticCurveTo(x, y, x + r, y);
  ctx.closePath();
}

function breakLongWord(ctx, word, maxWidth) {
  let parts = [], current = '';
  for (let char of word) {
    const test = current + char;
    if (ctx.measureText(test).width > maxWidth) {
      if (current.length > 0) {
        parts.push(current + '-');
        current = char;
      } else {
        parts.push(char);
        current = '';
      }
    } else {
      current = test;
    }
  }
  if (current.length > 0) parts.push(current);
  return parts;
}

function wrapText(ctx, text, maxWidth, maxLines) {
  const words = text.split(' ');
  let lines = [], currentLine = '';

  for (let word of words) {
    if (ctx.measureText(word).width > maxWidth) {
      const broken = breakLongWord(ctx, word, maxWidth);
      for (let part of broken) {
        if (currentLine.length > 0) {
          lines.push(currentLine);
          currentLine = '';
        }
        lines.push(part);
        if (lines.length === maxLines) return lines;
      }
      continue;
    }

    const testLine = currentLine ? currentLine + ' ' + word : word;
    if (ctx.measureText(testLine).width <= maxWidth) {
      currentLine = testLine;
    } else {
      lines.push(currentLine);
      currentLine = word;
      if (lines.length === maxLines) return lines;
    }
  }

  if (currentLine && lines.length < maxLines) lines.push(currentLine);
  return lines;
}

function drawVignette(ctx, width, height) {
  const vignette = ctx.createRadialGradient(
    width / 2, height / 2, Math.min(width, height) * 0.35,
    width / 2, height / 2, Math.max(width, height) * 0.5
  );
  vignette.addColorStop(0, 'rgba(0,0,0,0)');
  vignette.addColorStop(1, 'rgba(0,0,0,0.35)');
  ctx.save();
  ctx.fillStyle = vignette;
  ctx.fillRect(0, 0, width, height);
  ctx.restore();

  const corners = [
    { x: 0, y: 0 }, { x: width, y: 0 },
    { x: 0, y: height }, { x: width, y: height }
  ];
  const radius = Math.min(width, height) * 0.35;

  for (const corner of corners) {
    const grad = ctx.createRadialGradient(corner.x, corner.y, 0, corner.x, corner.y, radius);
    grad.addColorStop(0, 'rgba(0,0,0,0.18)');
    grad.addColorStop(1, 'rgba(0,0,0,0)');
    ctx.save();
    ctx.fillStyle = grad;
    ctx.beginPath();
    ctx.arc(corner.x, corner.y, radius, 0, 2 * Math.PI);
    ctx.fill();
    ctx.restore();
  }
}
